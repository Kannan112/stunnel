# gRPC server port
GRPC_PORT=50055

LOG_LEVEL=info

# === Optional Configuration ===

SSL_CERT_DIR=/etc/ssl/certs

STUNNEL_CONFIG=/etc/stunnel/stunnel.conf

STUNNEL_PID_FILE=/tmp/stunnel.pid

STUNNEL_ACCEPT_PORT=443

STUNNEL_CONNECT_HOST=127.0.0.1

STUNNEL_CONNECT_PORT=8443

STUNNEL_FOREGROUND=yes

# === Development Configuration ===

# Rust backtrace for debugging (0=off, 1=short, full=full)
RUST_BACKTRACE=1

# Rust log level (trace, debug, info, warn, error)
RUST_LOG=stunnel_space=info

# === Docker Configuration ===
DOCKER_IMAGE_NAME=stunnel-manager

DOCKER_CONTAINER_NAME=stunnel-manager

